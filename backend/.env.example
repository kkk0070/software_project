# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecoride_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
# IMPORTANT: Change this to a strong random secret in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=24h

# CORS Configuration
# Note: In development mode, all localhost origins are automatically allowed
# This setting is used for production or to restrict specific origins
CORS_ORIGIN=http://localhost:5173

# Email Configuration for 2FA
# For Gmail: Set EMAIL_SERVICE=gmail and use app-specific password
# For other services: Configure SMTP settings
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=SePro App

# SMTP Configuration (if not using Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
